<div class="col-md-8">
  <div id="content">
    <h1><%= @subject.name %></h1>
    <p>
      <%= @subject.description %>
    </p>
  <%= link_to 'Edit subject', edit_subject_path(@subject), remote: true, class: "btn btn-primary" %> </br>
</div>
</div>

<div class="form-horizontal">  
    <div class="col-md-4">
      <h1>List tasks</h1>
      <p> <%= link_to "Show subject content", subject_path(@subject), remote:true %> </p>
        <% @tasks.each do |task| %>
          <p>
            <%= link_to task.name, task_path(task), remote:true %>
            <%= link_to 'Add tests', task_path(task), class: "btn btn-xs btn-primary", target: "_blank" %>
            <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-warning" %>
          </p>
        <% end %>
        <div id="task-form" >
          <%= link_to 'Add a task', subject_addtask_path(@subject), 
          remote: true, class: "btn btn-primary" %> </br>
    </div>
  </div>
</div>