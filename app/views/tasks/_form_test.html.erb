
<%= form_for @test do |f| %>
  <%# f.error_messages %>
  <div class="input-group">
    <%= f.label :name, "Name", class: "input-group-addon", id: "basic-addon1" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Name of test",
                            'aria-describedby' => "basic-addon1" %>
    <%= f.hidden_field :task_id, :value => @task.id %>
  </div>
    
    <%= f.fields_for :choice_questions do |c| %>
      <p>
        <%= c.label :content, "Question" %><br />
        <%= c.text_area :content, :rows => 3,class: "form-control" %>
      </p>
      <%= c.fields_for :answers do |a| %>
        <div class="input-group">
          <%= a.label :akey, "A", class: "input-group-addon", id: "basic-addon1" %>
          <%= a.text_field :akey, class: "form-control", placeholder: "A key",
                            'aria-describedby' => "basic-addon1" %>
        </div>
        <div class="input-group">
          <%= a.label :bkey, "B", class: "input-group-addon", id: "basic-addon1" %>
          <%= a.text_field :bkey, class: "form-control", placeholder: "B key",
                            'aria-describedby' => "basic-addon1" %>
        </div>
        <div class="input-group">
          <%= a.label :ckey, "C", class: "input-group-addon", id: "basic-addon1" %>
          <%= a.text_field :ckey, class: "form-control", placeholder: "C key",
                            'aria-describedby' => "basic-addon1" %>
        </div>
        <div class="input-group">
          <%= a.label :dkey, "D", class: "input-group-addon", id: "basic-addon1" %>
          <%= a.text_field :dkey, class: "form-control", placeholder: "D key",
                            'aria-describedby' => "basic-addon1" %>
        </div>
        <div class="input-group">
          <%= a.label :correctkey, "Correct key" %>
          <%= a.select :correctkey, options_for_select(%w[A B C D]) %>
        </div>
      <% end %>
  <% end %>

  <div id="question">
    <%= f.fields_for :choice_questions do |c| %>
    <%= render 'question_fields', c: c %>
    <% end %>
  </div>

<%= link_to 'Add a question', task_addquestion_path(@task), class: "btn btn-xs btn-primary" %>
  
  <p><%= f.submit "Submit", class: "btn btn-primary" %></p>
<% end %>