  <%= form_for [:supervisor, @user] do |f| %>
    <%= render "shared/error_messages", object: f.object %>
      <table>
        <tr>
            <td>
              <%= f.label :name %>
            </td>
            <td>
              <%= f.text_field :name %>
            </td>
        </tr>
        <tr>
            <td>
              <%= f.label :email, "Email:" %>
            </td>
            <td>
              <%= f.email_field :email %>
            </td>
        </tr>
        <tr>
            <td>
              <%= f.label :date_of_join %>
            </td>
            <td>
              <%= f.date_select :date_of_join %>
            </td>
        </tr>
        <tr>
            <td>
              <%= f.label :address %>          
            </td>
            <td>
              <%= f.text_field :address %>
            </td>
        </tr>
        <tr>
            <td>
              <%= f.label :password %>          
            </td>
            <td>
              <%= f.password_field :password %>
            </td>
        </tr>
        <tr>
            <td>
              <%= f.label :password_confirmation, "Confirmation" %>          
            </td>
            <td>
              <%= f.password_field :password_confirmation %>
            </td>
        </tr>
      </table>
      

      <%= f.submit "Update now", class: "btn btn-primary" %>
    <% end %>