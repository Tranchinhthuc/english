<div class="col-md-8">
  <div id="content">
    <h1><%= @course.name %></h1>
    <p>
      <%= h @course.description %>
    </p>
  <%= link_to 'Edit course', edit_supervisor_course_path(@course), class: "btn btn-primary", remote: true %> </br>
</div>
</div>

<div class="form-horizontal">  
    <div class="col-md-4">
      <h1>List subjects</h1>   
      <p> <%= link_to "Show course content", supervisor_course_path(@course), remote:true %> </p>
        <% @subjects.each do |subject| %>
          <p>
            <%= link_to subject.name, supervisor_subject_path(subject), remote: true %> </br>
            <%= link_to 'Add tasks', supervisor_subject_path(subject), target: "_blank", class: "btn btn-xs btn-primary" %>
            <%= link_to 'Destroy', supervisor_subject_path(subject), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-warning" %>
          </p>
        <% end %>
        <%= link_to 'Add a subject', supervisor_course_addsubject_path(@course), 
          remote: true, class: "btn btn-primary" %> </br>
  </div>
</div>